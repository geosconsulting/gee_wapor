<?xml version="1.0"?>
<domain>
    <name>Arkansas City 2011 Flood</name>

    <sensors>
      <sensor>
        <name>MODIS</name>
        <bands>
          <source>
            <start_date>2011-05-08</start_date>
            <end_date>2011-05-11</end_date>
          </source>
        </bands>
      </sensor>
      
      <sensor>
        <name>Landsat5</name>
        <bands>
          <source>
            <start_date>2011-05-08</start_date>
            <end_date>2011-05-11</end_date>
          </source>
        </bands>
      </sensor>
      
      <sensor>
        <name>NED13</name>
      </sensor>
    </sensors>

    <bbox>
        <bottomleft>
            <lon>-91.32</lon>
            <lat>33.56</lat>
        </bottomleft>
        <topright>
            <lon>-91.03</lon>
            <lat>33.7</lat>
        </topright>
    </bbox>
    
    <truth>users/scottmcmichael/crisis_mapping_truths/cmt_arkansas_city_truth</truth>
    <training_domain>mississippi_2011_5</training_domain>
    
    <algorithm_params>
      <modis_diff_threshold>1200</modis_diff_threshold>
      
      <modis_mask_threshold>6.5</modis_mask_threshold>
      <modis_change_threshold>-3.5</modis_change_threshold>
      
      <dartmouth_threshold>0.75</dartmouth_threshold>
    </algorithm_params>
    
</domain>

