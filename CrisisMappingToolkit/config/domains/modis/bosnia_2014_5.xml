<?xml version="1.0"?>
<domain>
    <name>Bosnia Herzegovina 2014 Flood</name>
    
    <sensors>
    
      <sensor>
          <name>SRTM90</name>
      </sensor>
    
      <sensor>
        <name>MODIS</name>
        <bands>
          <source>
            <start_date>2014-05-21</start_date>
            <end_date>2014-05-22</end_date>
          </source>
        </bands>
      </sensor>
      
      <sensor>
        <name>Landsat8</name>
        <bands>
          <source>
            <start_date>2014-05-21</start_date>
            <end_date>2014-05-23</end_date>
          </source>
        </bands>
      </sensor>     

    </sensors>
    
    <bbox>
        <bottomleft>
            <lon>18.5072</lon>
            <lat>44.919</lat>
        </bottomleft>
        <topright>
            <lon>18.809</lon>
            <lat>45.1006</lat>
        </topright>
    </bbox>

    
    <truth>users/bcoltin/groundtruths/bosnia</truth>
    <training_domain>bosnia_west_2014_5</training_domain>
    <unflooded_training_domain>unflooded_bosnia_2013</unflooded_training_domain>
    
    <algorithm_params>
      <modis_diff_threshold>1200</modis_diff_threshold>
      
      <modis_mask_threshold>4.5</modis_mask_threshold>
      <modis_change_threshold>-3.0</modis_change_threshold>
      
      <dartmouth_threshold>0.75</dartmouth_threshold>

      <mod_ndwi_threshold>-0.059688</mod_ndwi_threshold>
      
      <fai_threshold>700</fai_threshold>
      
      <dem_threshold>79</dem_threshold>
    </algorithm_params>
    
</domain>

