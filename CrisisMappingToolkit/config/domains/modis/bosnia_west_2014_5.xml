<?xml version="1.0"?>
<domain>
    <name>Bosnia Herzegovina 2014 Flood - West</name>
    
    <sensors>
      <sensor>
        <name>MODIS</name>
        <bands>
          <source>
            <start_date>2014-05-21</start_date>
            <end_date>2014-05-22</end_date>
          </source>
        </bands>
      </sensor>
      
      <sensor>
        <name>Landsat8</name>
        <bands>
          <source>
            <start_date>2014-05-22</start_date>
            <end_date>2014-05-23</end_date>
          </source>
        </bands>
      </sensor>
      
      <sensor>
          <name>SRTM90</name>
      </sensor>
    </sensors>
    
    <bbox>
        <bottomleft>
            <lon>17.4125</lon>
            <lat>45.0630</lat>
        </bottomleft>
        <topright>
            <lon>17.6975</lon>
            <lat>45.1681</lat>
        </topright>
