<?xml version="1.0"?>
<domain>
    <name>SF Bay area</name>
    
    <sensors>

      <sensor>
        <name>NED13</name>
        <range>
          <minimum>0</minimum>
          <maximum>80</maximum>
        </range>
      </sensor>

      <sensor>
        <name>MODIS</name>
        <bands>
          <source>
            <start_date>2011-04-27</start_date>
            <end_date>2011-04-28</end_date>
          </source>
        </bands>
      </sensor>
      
      <sensor>
        <name>Landsat5</name>
        <bands>
          <source>
            <start_date>2011-04-27</start_date>
            <end_date>2011-04-28</end_date>
          </source>
        </bands>
      </sensor>
      
    </sensors>
    
    <bbox>
        <bottomleft>
            <lon>-122.55</lon>
            <lat>37.40</lat>
        </bottomleft>
        <topright>
            <lon>-121.7</lon>
            <lat>37.67</lat>
        </topright>
    </bbox>
    
    <truth>users/scottmcmichael/crisis_mapping_truths/cmt_sf_bay_truth</truth>
    <training_domain>berkeley_2011_4</training_domain>
    
    <algorithm_params>
      <modis_diff_threshold>650</modis_diff_threshold>
      
      <modis_mask_threshold>3.5</modis_mask_threshold>
      <modis_change_threshold>-2.0</modis_change_threshold>
      
      <dartmouth_threshold>0.55</dartmouth_threshold>
      
      <dem_threshold>2.5</dem_threshold>
    </algorithm_params>
    
</domain>

