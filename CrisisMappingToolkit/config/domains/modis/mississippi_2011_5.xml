<?xml version="1.0"?>
<domain>
    <name>Mississippi Border May 2011 </name>
    
    <sensors>

      <sensor>
        <name>NED13</name>
        <range>
          <minimum>20</minimum>
          <maximum>70</maximum>
        </range>
      </sensor>

      <sensor>
        <name>MODIS</name>
        <bands>
          <source>
            <start_date>2011-05-08</start_date>
            <end_date>2011-05-11</end_date>
          </source>
        </bands>
      </sensor>
      
      <sensor>
        <name>Landsat5</name>
        <bands>
          <source>
            <start_date>2011-05-08</start_date>
            <end_date>2011-05-11</end_date>
          </source>
        </bands>
      </sensor>

    </sensors>
    
    <bbox>
        <bottomleft>
            <lon>-91.23</lon>
            <lat>32.88</lat>
        </bottomleft>
        <topright>
            <lon>-91.02</lon>
            <lat>33.166</lat>
        </topright>
    </bbox>
    
    <truth>users/scottmcmichael/crisis_mapping_truths/cmt_mississippi_truth</truth>
    <training_domain>arkansas_city_2011_5</training_domain>
    <unflooded_training_domain>unflooded_mississippi_2010</unflooded_training_domain>
    
    <algorithm_params>
      <modis_diff_threshold>1020</modis_diff_threshold>
      
      <modis_mask_threshold>3.5</modis_mask_threshold>
      <modis_change_threshold>-3.5</modis_change_threshold>
      
      <dartmouth_threshold>0.72</dartmouth_threshold>
      
      <fai_threshold>848</fai_threshold>

      <mod_ndwi_threshold>0.184219</mod_ndwi_threshold>
      
      <dem_threshold>27</dem_threshold>
    </algorithm_params>
    
</domain>

