<?xml version="1.0"?>
<domain>
    <name>Kashmore North 2010 Flood</name>
    
    <sensors>
      <sensor>
        <name>MODIS</name>
        <bands>
          <source>
            <start_date>2010-08-13</start_date>
            <end_date>2010-08-14</end_date>
          </source>
        </bands>
      </sensor>
      
      <sensor>
        <name>Landsat5</name>
        <bands>
          <source>
            <start_date>2010-08-12</start_date>
            <end_date>2010-08-13</end_date>
          </source>
        </bands>
        <display_gains>1.5, 1.6, 1.0</display_gains>
      </sensor>
      
      <sensor>
        <name>SRTM90</name>
      </sensor>
    </sensors>
    
    <bbox>
        <bottomleft>
            <lon>70.105</lon>
            <lat>28.67</lat>
        </bottomleft>
        <topright>
            <lon>70.185</lon>
            <lat>28.97</lat>
        </topright>
    </bbox>
    
    <truth>users/scottmcmichael/crisis_mapping_truths/cmt_kashmore_north_truth</truth>
    <training_domain>kashmore_2010_8</training_domain>
    
    <algorithm_params>
      <modis_diff_threshold>350</modis_diff_threshold>
      
      <modis_mask_threshold>4.5</modis_mask_threshold>
      <modis_change_threshold>-3.0</modis_change_threshold>
      
      <dartmouth_threshold>0.65</dartmouth_threshold>
    </algorithm_params>
    
</domain>

